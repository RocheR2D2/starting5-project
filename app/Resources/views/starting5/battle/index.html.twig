{% extends 'base.html.twig' %}

  {% block header %}
      <h2 class="text-light">
          {{ name }}
      </h2>
  {% endblock header %}

{% block body %}

    <div class="container">
        <div class="col-lg-12 mx-auto">

            <div id="battle">
                <h2><a class="btn btn-battle-mode waves-effect" href=""><span class="ti-basketball"></span>Find an opponent</a></h2>
            </div>

           <div class="row text-center">
               <div id="myTeam" class="col-md-12 battle-my-team">
                   {% include 'starting5/battle/myTeam.html.twig' with {'team' : activeTeam }  %}
               </div>
               <div id="vs" style="margin-bottom:20px;" class="col-md-12 text-center"></div>
               <div id="opponent" class="col-md-12"></div>
               <div id="confrontButton" class=""></div>
           </div>
            <script type="text/javascript">
                var battle = $("#battle");
                var loading = $('.loading');
                var opponent = $('#opponent');
                var id = $('#vs');
                var confrontButton = $('#confrontButton');
                battle.click(function () {
                    $.ajax({
                        url: '{{ path('battle.search') }}',
                        type: 'POST',
                        beforeSend: function () {
                            loading.show();
                        },
                        complete: function () {
                            loading.hide();
                        },
                        success: function (success) {
                            opponent.empty();
                            confrontButton.empty();
                            id.empty();
                            id.append("<div class='col-md-12'><h2>VS</h2></div>");
                            opponent.append(success.opponent);
                            opponent.css("display","block");
                            confrontButton.append(success.button);
                            $("html, body").animate({ scrollTop: $(document).height() }, "slow");
                        }
                    });
                });
            </script>
        </div>
    </div>

{% endblock %}